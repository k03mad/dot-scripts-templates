#!/usr/bin/env zsh
# shellcheck source=/dev/null
# shellcheck disable=SC2164

export DOT_FOLDER="${HOME}/git/dot-scripts-templates"
export DOT_FOLDER_ZSH="${DOT_FOLDER}/zsh"
export DOT_FOLDER_TOOLS="${DOT_FOLDER}/scripts/tools"

if [ -n "${IS_RPI}" ]; then
    export SKIP_NVMRC=true
fi

if [ -n "${IS_TERMUX}" ]; then
    export SKIP_NVMRC=true
    export NO_SUDO=true
fi

if [ -n "${IS_UBUNTU}" ]; then
    export NO_EXA=true
fi

source "${DOT_FOLDER_ZSH}/vars"

source "${DOT_FOLDER_ZSH}/omz"
source "${DOT_FOLDER_ZSH}/p10k"

source "${DOT_FOLDER_ZSH}/alias"
source "${DOT_FOLDER_ZSH}/func"

source "${HOME}/.keyrc"

if [ -n "${IS_RPI}" ] && [ -z "${SSH_TTY}" ]; then
    source "${DOT_FOLDER_ZSH}/pi/autorun"
fi
