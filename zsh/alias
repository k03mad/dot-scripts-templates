#!/usr/bin/env bash

alias ccd="cd"
alias del="rm -rfv"
alias bat="bat --tabs=0 --paging=never"

alias nvmin="nvm install \$(cat .nvmrc) --reinstall-packages-from=\$(node -v | tr -d v)"
alias nvmup="nvm install node --reinstall-packages-from=node"
alias nvmcl="del \$(ls -td \${NVM_DIR}/versions/node/* | tail -n +2) && del \${NVM_DIR}/.cache/bin"

alias aptup="sudo apt-get update && sudo apt-get upgrade && sudo apt-get dist-upgrade && sudo apt-get autoremove && sudo apt-get autoclean && sudo apt-get clean"

alias caskin="\${HOME}/git/dot-scripts-templates/scripts/tools/cask.sh"
alias brewin="\${HOME}/git/dot-scripts-templates/scripts/tools/brew.sh"
alias brewup="brew update && brew upgrade && brew cask upgrade && brew cleanup && brew doctor"

alias npmin="\${HOME}/git/dot-scripts-templates/scripts/tools/npm.sh"
alias npmup="npm ls -g --depth=0 && ncu -g && for package in \$(npm -g outdated --parseable --depth=0 | cut -d: -f4); do npm i \${package} -g; done"
alias npmrm="npm ls -gp --depth=0 | awk -F/ '/node_modules/ && !/\/npm$/ {print \$NF}' | xargs npm -g rm"

alias zshin="\${HOME}/git/dot-scripts-templates/scripts/tools/zsh.sh"

alias st="speed-test -b -v"
alias ip="curl ipinfo.io -s | jq && curl ifconfig.co/json -s | jq && curl ifconfig.me/all.json -s | jq"

alias gs="git status -s"
alias ga="gs && git add ."
alias gp="git push"
alias gpl="git pull"
alias gplm="git pull origin master"
alias grh="git reset --hard"
alias gbd="git branch -D \$(git branch | grep -v \* | xargs)"

alias sdock="defaults write com.apple.dock persistent-apps -array-add '{tile-data={}; tile-type='spacer-tile';}' && killall Dock"
