#!/usr/bin/env zsh
# shellcheck disable=SC2154,SC2142

alias sudo="sudo "

alias del="rm -rfv"
alias bat="bat --tabs=0 --paging=never"
alias tree="pwd && tree -aIC 'node_modules|.git' --dirsfirst --sort=name"

alias aptin="\${DOT_SCRIPTS}/scripts/tools/apt.sh"

apt=("apt-get update" "&& apt-get upgrade" "&& apt-get dist-upgrade" "&& apt-get autoremove" "&& apt-get autoclean" "&& apt-get clean")
alias aptup="\${apt[@]}"
alias aptups="sudo sh -c '\${apt[@]}'"

alias brewin="\${DOT_SCRIPTS}/scripts/tools/brew.sh && \${DOT_SCRIPTS}/scripts/tools/cask.sh"
alias brewup="echo \"\${C_GREEN}brews installed:\${C_OFF}\" && brew leaves | xargs && echo \"\${C_YELLOW}casks installed:\${C_OFF}\" && brew cask list | xargs && brew analytics off && brew update && brew upgrade && brew cask upgrade && brew cleanup && brew doctor"

alias npmin="\${DOT_SCRIPTS}/scripts/tools/npm.sh"
alias npmls="npm ls -g --depth=0"
alias npmup="npmls && ncu -g && for package in \$(npm -g outdated --parseable --depth=0 | cut -d: -f4); do npm i \${package} -g; done"
alias npmrm="npmls --json | jq -r '.dependencies|keys-[\"npm\"]|join(\"\n\")' | xargs npm -g rm"

alias nvmup="nvm install node --reinstall-packages-from=node"
alias nvmin="nvm install \$(cat .nvmrc) --reinstall-packages-from=node"
alias nvmcl="del \$(ls -td \${NVM_DIR}/versions/node/* | tail -n +2) && del \${NVM_DIR}/.cache/bin"
alias nvmls="echo \"\${C_MAGENTA}current:\${C_OFF} \$(node -v)\" && echo \"\${C_MAGENTA}remote:\${C_OFF} \$(nvm version-remote)\" && echo && nvm ls"

alias st="speed-test -b -v"

alias gs="git status -s"
alias ga="git add . && gs"
alias gp="git push"
alias gpl="git pull origin master --no-edit"
alias gplo="git pull origin \$(git branch | grep '\*' | cut -d' ' -f2-) --no-edit"
alias grh="git reset --hard"
alias gbd="git branch -D \$(git branch | grep -v \* | xargs)"

alias syncbb="git pull origin master --no-edit && git pull bb master --no-edit && git push origin master && git push bb master"

alias depup="gpl && ncu -u && npm run setup && ga && gce 'update deps' && gp"

alias sdock="defaults write com.apple.dock persistent-apps -array-add '{tile-data={}; tile-type='spacer-tile';}' && killall Dock"
