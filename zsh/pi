#!/usr/bin/env zsh
# shellcheck disable=SC2164

sudo sh -c 'echo 0 > /sys/class/leds/led1/brightness'
sudo sh -c 'echo 0 > /sys/class/leds/led0/brightness'

run() {
    cd ~/git/"$1"/
    gpl
    npm run setup
    npm run "${2:-start}"
}

run "magnet-co-parser" "server"

run "rpi-tools-cron"
run "rpi-tools-bot"

zshup

cd ~
