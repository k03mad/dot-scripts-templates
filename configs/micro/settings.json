{
    "autosu": true,
    "clipboard": "external",
    "colorscheme": "geany",
    "keepautoindent": true,
    "mkparents": true,
    "rmtrailingws": true,
    "savecursor": true,
    "saveundo": true,
    "scrollbar": true,
    "scrollbarchar": " ",
    "scrollspeed": 1,
    "statusformatl": "$(modified)($(line),$(col)) $(filename)",
    "statusformatr": "$(opt:filetype) $(opt:fileformat)/$(opt:encoding)",
    "tabstospaces": true
}
